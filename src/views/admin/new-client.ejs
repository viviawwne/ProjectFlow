<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="main">
  <div class="main-content project">
    <div class="row">
      <div class="col-12">
        <div class="box">
          <div class="box-body">
            <form method="POST" action="/admin/clients/new" enctype="multipart/form-data">
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label>Client Name</label>
                  <input type="text" name="name" required class="form-control" placeholder="Enter Client Name">
                </div>
                <div class="col-md-6 mb-3">
                  <label>Email</label>
                  <input type="email" name="email" required class="form-control" placeholder="Enter Email">
                </div>
                <div class="col-md-6 mb-3">
                  <label>Contact No</label>
                  <input type="text" name="contact_no" required class="form-control" placeholder="Enter Contact No">
                </div>
                <div class="col-md-6 mb-3">
                  <label>Country</label>
                  <input type="text" name="country" required class="form-control" placeholder="Enter Country">
                </div>
                <div class="col-md-6 mb-3">
                  <label>Status</label>
                  <select name="status" required class="form-control">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                  </select>
                </div>
                <div class="col-md-6 mb-3">
                  <label>Website</label>
                  <input type="text" name="website" required class="form-control" placeholder="Company Website">
                </div>
                <div class="col-md-12 mb-3">
                  <label>Address</label>
                  <input type="text" name="address" required class="form-control" placeholder="Enter Address">
                </div>
              </div>
              <div class="mb-3">
                <label>About</label>
                <textarea name="about" class="form-control" required></textarea>
              </div>
              <div class="mb-3">
                <label>Logo Attachment</label>
                <input type="file" name="attachment_file" class="form-control">
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
