<h1>Lista de Departamentos</h1>

<table border="1" cellpadding="8" cellspacing="0">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% if (departments.length === 0) { %>
      <tr><td colspan="4">Nenhum departamento encontrado.</td></tr>
    <% } else { %>
      <% departments.forEach(dept => { %>
        <tr>
          <td><%= dept.department_id %></td>
          <td><%= dept.department_name %></td>
          <td><%= dept.description %></td>
          <td>
            <form action="/admin/departments/delete/<%= dept.department_id %>" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Tem certeza que deseja excluir este departamento?')">Excluir</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>

<a href="/admin/departments/create">Criar novo departamento</a>
