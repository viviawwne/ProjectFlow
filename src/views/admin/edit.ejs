<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Editar Tarefa</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container my-4">
    <h1 class="mb-4 text-center">Editar Tarefa</h1>

    <form action="/admin/tasks/<%= task.id %>?_method=PUT" method="POST" class="card p-4 shadow-sm">
      <div class="mb-3">
        <label for="taskName" class="form-label">Nome da Tarefa</label>
        <input type="text" class="form-control" id="taskName" name="taskName" value="<%= task.task_name %>" required />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Descrição</label>
        <textarea class="form-control" id="description" name="description" rows="3"><%= task.description || '' %></textarea>
      </div>

      <div class="mb-3">
        <label for="cardId" class="form-label">Card (opcional)</label>
        <input type="number" class="form-control" id="cardId" name="cardId" value="<%= task.card_id || '' %>" />
      </div>

      <div class="mb-3">
        <label for="priority" class="form-label">Prioridade</label>
        <select name="priority" id="priority" class="form-select">
          <option value="">Selecione</option>
          <option value="baixa" <%= task.priority === 'baixa' ? 'selected' : '' %>>Baixa</option>
          <option value="média" <%= task.priority === 'média' ? 'selected' : '' %>>Média</option>
          <option value="alta" <%= task.priority === 'alta' ? 'selected' : '' %>>Alta</option>
        </select>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="startDate" class="form-label">Data de Início</label>
          <input type="date" class="form-control" id="startDate" name="startDate" value="<%= task.start_date?.toISOString().split('T')[0] || '' %>" />
        </div>
        <div class="col-md-6 mb-3">
          <label for="dueDate" class="form-label">Data de Entrega</label>
          <input type="date" class="form-control" id="dueDate" name="dueDate" value="<%= task.due_date?.toISOString().split('T')[0] || '' %>" />
        </div>
      </div>

      <div class="d-flex justify-content-between">
        <a href="/admin/tasks" class="btn btn-secondary">Cancelar</a>
        <button type="submit" class="btn btn-primary">Atualizar</button>
      </div>
    </form>
  </div>
</body>
</html>
