<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
  <title><%= project.project_title %> - Project Details</title>
</head>
<body>
  <%- include('../partials/header') %>

  <div class="main">
    <div class="main-content">

      <!-- TÃ­tulo e Departamento -->
      <div class="row">
        <div class="col-12">
          <div class="box project">
            <div class="box-header">
              <h4 class="box-title"><%= project.project_title %></h4>
              <div class="box-right d-flex">
                <button class="btn btn-primary"><%= project.department %></button>
              </div>
            </div>
            <div class="divider"></div>
            <div class="box-body content">
              <h4 class="title">Project Description</h4>
              <p class="fs-18 font-w400 font-main mt-27 mb-29"><%= project.description %></p>
              <ul class="list-img">
                <% for (let i = 1; i <= 4; i++) { %>
                  <li>
                    <div class="img-dv">
                      <img style="width: 320px;" src="/images/product/<%= project.department %><%= i %>.jpg" alt="">
                    </div>
                  </li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Tarefas e Arquivos -->
      <div class="row client project">
        <div class="col-8 col-xl-12">
          <div class="box pd-0">
            <div class="tab-menu-heading hremp-tabs p-0">
              <div class="tabs-menu1">
                <ul class="nav panel-tabs w-100 d-flex">
                  <li class=""><a href="#tab1" class="active" data-bs-toggle="tab">Task</a></li>
                  <li><a href="#tab2" data-bs-toggle="tab">Files</a></li>
                </ul>
              </div>
            </div>

            <div class="panel-body tabs-menu-body hremp-tabs1 p-0">
              <div class="tab-content">

                <!-- Aba de Tarefas -->
                <div class="tab-pane active" id="tab1">
                  <div class="box-body pl-15 pr-15 pb-20 table-responsive activity mt-10">
                    <table class="table table-vcenter text-nowrap table-bordered">
                      <thead>
                        <tr>
                          <th>No</th>
                          <th>Task</th>
                          <th>Priority</th>
                          <th>Start Date</th>
                          <th>Deadline</th>
                          <th>Work Status</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if (tasks.length > 0) { %>
                          <% tasks.forEach((task, index) => { %>
                            <tr>
                              <td class="text-center"><%= index + 1 %></td>
                              <td><%= task.task_name %></td>
                              <td><span class="badge badge-danger-light"><%= task.priority %></span></td>
                              <td><%= task.start_date %></td>
                              <td><%= task.due_date %></td>
                              <td><span class="badge badge-warning"><%= task.status %></span></td>
                              <td>
                                <a href="/admin/task/complete/<%= task.id %>" class="btn btn-success submit-btn">Complete</a>
                              </td>
                            </tr>
                          <% }) %>
                        <% } else { %>
                          <tr><td colspan="7">No tasks found</td></tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>

                <!-- Aba de Arquivos -->
                <div class="tab-pane" id="tab2">
                  <div class="box-body pl-15 pr-15 pb-20 table-responsive activity mt-10">
                    <% if (files.length > 0) { %>
                      <a href="#" data-toggle="modal" data-target="#assign" class="btn btn-primary mb-3">Upload Files</a>
                      <table class="table table-vcenter text-nowrap table-bordered mw-100">
                        <thead>
                          <tr>
                            <th>No</th>
                            <th>File Name</th>
                            <th>Task Name</th>
                            <th>Upload Date</th>
                            <th>Actions</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% files.forEach((file, index) => { %>
                            <tr>
                              <td><%= index + 1 %></td>
                              <td><%= file.attachment %></td>
                              <td><%= file.task %></td>
                              <td><%= file.date %></td>
                              <td>
                                <a href="/images/work/<%= file.attachment %>" class="btn btn-primary" download>Download</a>
                                <a href="/admin/file/delete/<%= file.id %>" class="btn btn-danger submit-btn">Delete</a>
                              </td>
                            </tr>
                          <% }) %>
                        </tbody>
                      </table>
                    <% } else { %>
                      <p>No files found</p>
                    <% } %>
                  </div>
                </div>

              </div>
            </div>

          </div>
        </div>
      </div>

    </div>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
