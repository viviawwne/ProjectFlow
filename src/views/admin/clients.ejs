<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="main">
    <div class="main-content client">
        <div class="row">
            <div class="col-12">
                <div class="box project">
                    <div class="box-header">
                        <h4 class="box-title">Clientes</h4>
                        <a class="btn btn-primary" href="/admin/clients/new"><i class="fas fa-plus mr-5"></i>Add</a>
                    </div>
                </div>
            </div>

            <% clients.forEach(client => { %>
            <div class="col-3 col-md-6 col-sm-12 mb-25">
                <div class="box client">
                    <div class="box-body pt-5 pb-0">
                        <div class="img-box">
                            <img class="rounded-circle header-profile-user" src="/images/client/<%= client.image %>" alt="">
                            <div style="left: 40px;bottom: 3px;" class="pulse-css"></div>
                        </div>
                        <a href="/admin/client-details?data=<%= client.id %>"><h5 class="mt-17"><%= client.name %></h5></a>
                        <p class="fs-14 font-w400 font-main">
                            <span class="text-clo-primary font-w500 pl-4"><%= client.status %></span>
                        </p>
                        <ul class="info">
                            <li class="fs-14"><i class='bx bxs-phone'></i><%= client.contact_no %></li>
                            <li class="fs-14"><i class='bx bxs-envelope'></i><%= client.email_id %></li>
                        </ul>
                        <div class="group-btn d-flex justify-content-between">
                            <a class="bg-btn-pri color-white" href="mailto:<%= client.email_id %>">Send Email</a>
                            <a class="bg-btn-sec color-main" href="/admin/client-details/<%= client.id %>">View Profile</a>

                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

        <!-- Tabela -->
        <div class="row">
            <div class="col-12">
                <div class="box">
                    <div class="box-body">
                        <div class="table-responsive">
                            <table class="table table-vcenter text-nowrap table-bordered">
                                <thead>
                                    <tr class="top">
                                        <th class="text-center">No</th>
                                        <th>Client ID</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Contact</th>
                                        <th>Country</th>
                                        <th>Status</th>
                                        <th>Address</th>
                                        <th>Website</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% allClients.forEach(client => { %>
                                    <tr>
                                        <td class="text-center"><%= client.id %></td>
                                        <td><%= client.client_id %></td>
                                        <td><a href="/admin/client-details?data=<%= client.id %>"><%= client.name %></a></td>
                                        <td><%= client.email_id %></td>
                                        <td><%= client.contact_no %></td>
                                        <td><%= client.country %></td>
                                        <td><%= client.status %></td>
                                        <td><%= client.address %></td>
                                        <td><%= client.website %></td>
                                        <td>
                                            <a href="/admin/clients/delete/<%= client.id %>" class="btn btn-danger submit-btn">Delete</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
