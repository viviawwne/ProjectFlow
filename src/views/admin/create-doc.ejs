<!DOCTYPE html>
<html lang="pt-br">
<head>
  <%- include('../partials/head') %>
  <title>Novo Documento</title>
</head>
<body>
  <%- include('../partials/header') %>

  <div class="main">
    <div class="main-content container">
      <h2>Novo Documento - <%= project.project_title %></h2>

      <form method="POST" action="/admin/documentation/create/<%= project.id %>">
        <div class="form-group">
          <label for="doc-title">Título <span style="color: red">*</span></label>
          <input type="text" id="doc-title" name="title" class="form-control" placeholder="Digite o título do documento" maxlength="150" required>
        </div>

        <div class="form-group">
          <label for="doc-content">Conteúdo <span style="color: red">*</span></label>
          <textarea id="doc-content" name="content" class="form-control" rows="12" placeholder="Descreva o conteúdo do documento" required></textarea>
        </div>

        <div class="form-group">
          <label>Relacionar com tarefa (opcional)</label>
          <select name="task_id" class="form-control">
            <option value="">Nenhuma</option>
            <% tasks.forEach(t => { %>
              <option value="<%= t.id %>"><%= t.task_name %></option>
            <% }) %>
          </select>
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>
    </div>
  </div>
</body>
</html>
