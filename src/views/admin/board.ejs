<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title><%= pagetitle %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    .board { gap: 1rem; }
    .column {
      background: #f8f9fa;
      padding: 1rem;
      border-radius: 0.5rem;
      max-height: 80vh;
      overflow-y: auto;
    }
    .card-task {
      box-shadow: 0 1px 4px rgb(0 0 0 / 0.1);
      margin-bottom: 1rem;
      padding: 0.75rem;
      background: #fff;
      border-radius: 0.3rem;
    }
    .task-item {
      background: #e9ecef;
      margin-bottom: 0.5rem;
      padding: 0.5rem;
      border-radius: 0.25rem;
      font-size: 0.9rem;
    }
    .form-select-sm {
      max-width: 150px;
    }
  </style>
</head>
<body>

  <div class="container my-4">
    <h1 class="mb-4 text-center"><%= pagetitle %></h1>

    <div class="text-center mb-4">
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCardModal">
        + Criar Novo Card
      </button>
    </div>

    <div class="modal fade" id="createCardModal" tabindex="-1" aria-labelledby="createCardModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <form action="/admin/cards" method="POST" class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="createCardModalLabel">Criar Novo Card</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="cardTitle" class="form-label">Título</label>
              <input type="text" class="form-control" id="cardTitle" name="title" required />
            </div>
            <div class="mb-3">
              <label for="cardDescription" class="form-label">Descrição</label>
              <textarea class="form-control" id="cardDescription" name="description" rows="3"></textarea>
            </div>
            <input type="hidden" name="project_id" value="<%= projectId %>" />
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary">Criar Card</button>
          </div>
        </form>
      </div>
    </div>

    <div class="row board row-cols-1 row-cols-md-4">

      <% const columns = [
        { name: 'To Do', cards: todoCards },
        { name: 'In Progress', cards: progressCards },
        { name: 'Review', cards: reviewCards },
        { name: 'Approved', cards: approvedCards }
      ]; %>

      <% columns.forEach(col => { %>
        <div class="col">
          <div class="column h-100">
            <h3 class="mb-3 text-center"><%= col.name %></h3>
            <% if (!col.cards || col.cards.length === 0) { %>
              <p class="text-muted small">Nenhum card nesta coluna.</p>
            <% } else { %>
              <% col.cards.forEach(card => { %>
                <div class="card card-task">
                  <h5><%= card.title %></h5>
                  <p class="mb-2 text-truncate"><%= card.description || '' %></p>
                  <div>
                    <% if (card.tasks && card.tasks.length > 0) { %>
                      <% card.tasks.forEach(task => { %>
                        <div class="task-item">
                          <strong><%= task.task_name %></strong><br />
                          <small><%= task.description || '' %></small>
                        </div>
                      <% }) %>
                    <% } else { %>
                      <small class="text-muted">Nenhuma tarefa atribuída</small>
                    <% } %>
                  </div>
                  <form action="/admin/cards/<%= card.id %>/status?_method=PATCH" method="POST" class="mb-2 d-flex gap-2 mt-3">
                    <select name="status" class="form-select form-select-sm" required>
                      <option value="">Selecione o status</option>
                      <option value="todo" <%= card.status === 'todo' ? 'selected' : '' %>>To Do</option>
                      <option value="progress" <%= card.status === 'progress' ? 'selected' : '' %>>In Progress</option>
                      <option value="review" <%= card.status === 'review' ? 'selected' : '' %>>Review</option>
                      <option value="approved" <%= card.status === 'approved' ? 'selected' : '' %>>Approved</option>
                    </select>
                    <button type="submit" class="btn btn-sm btn-primary">Atualizar</button>
                  </form>
                  <form action="/admin/cards/<%= card.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Tem certeza que deseja deletar este card?');">
                    <button type="submit" class="btn btn-sm btn-danger w-100">Excluir Card</button>
                  </form>
                </div>
              <% }) %>
            <% } %>
          </div>
        </div>
      <% }); %>

    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
