<%- include('../partials/head') %>

<!-- MAIN CONTENT -->
<div class="loginpd">
    <div class="main-content">
        <section class="login">
            <div class="row">
                <div class="col-12">
                    <div class="box">
                        <div class="box-header d-flex flex-column align-items-center">
                            <a href="/">
                                <img src="/images/logo-projectflow.png" alt="">
                            </a>
                            <div class="action-reg mt-3 text-center">
                                <h4 class="fs-30">Login</h4>
                                <a href="/user/login">Entre na sua conta</a>
                            </div>
                        </div>

                        <div class="line"></div>

                        <div class="box-body">
                            <div class="auth-content my-auto">

                                <% if (error) { %>
                                    <div class="alert alert-danger"><%= error %></div>
                                <% } %>

                                <form class="mt-5 pt-2" action="/admin/login" method="POST">
                                    <div class="mb-24">
                                        <label class="form-label mb-14">E-mail or Username</label>
                                        <input type="text" class="form-control" name="username" placeholder="Your email or username" required>
                                    </div>

                                    <div class="mb-16">
                                        <label class="form-label mb-14">Password</label>
                                        <div class="input-group auth-pass-inputgroup">
                                            <input type="password" class="form-control" name="password" id="passwordInput" placeholder="Enter password" required>
                                            <button class="btn shadow-none ms-0" type="button" id="togglePassword"><i class="far fa-eye-slash"></i></button>
                                        </div>
                                    </div>

                                    <div class="row mb-29">
                                        <div class="col">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="remember-check">
                                                <label class="form-check-label fs-14" for="remember-check">
                                                    Remember me
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <button class="btn bg-primary color-white w-100 waves-effect fs-18 font-w500" type="submit">Sign in</button>
                                    </div>
                                </form>

                                <div class="mt-37 text-center">
                                    <p class="text-muted mb-0 fs-14">NÃ£o possui uma conta? <a href="/admin/registration" class="text-primary fw-semibold">Crie uma conta</a></p>
                                </div>

                                <div class="mt-37 text-center">
                                    <ul class="list-inline mb-0">
                                        <li class="list-inline-item"><a href="#" class="social-list-item text-white"><i class='bx bxl-facebook-square'></i></a></li>
                                        <li class="list-inline-item"><a href="#" class="social-list-item text-white"><i class='bx bxl-twitter'></i></a></li>
                                        <li class="list-inline-item"><a href="#" class="social-list-item text-white"><i class='bx bxl-linkedin-square'></i></a></li>
                                        <li class="list-inline-item"><a href="#" class="social-list-item text-white"><i class='bx bxl-google-plus'></i></a></li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<!-- END MAIN CONTENT -->

<script>
    document.getElementById("togglePassword")?.addEventListener("click", function () {
        const passwordInput = document.getElementById("passwordInput");
        const toggleBtnIcon = this.querySelector("i");

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            toggleBtnIcon.classList.remove("fa-eye-slash");
            toggleBtnIcon.classList.add("fa-eye");
        } else {
            passwordInput.type = "password";
            toggleBtnIcon.classList.remove("fa-eye");
            toggleBtnIcon.classList.add("fa-eye-slash");
        }
    });
</script>

