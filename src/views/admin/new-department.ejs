<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../../partials/head') %>
    <title>Novo Departamento</title>
</head>
<body>
<%- include('../../partials/header') %>

<div class="main">
    <div class="main-content">
        <div class="container">
            <div class="box">
                <div class="box-header">
                    <h4 class="box-title">Cadastrar Departamento</h4>
                </div>
                <div class="box-body">
                    <% if (success) { %>
                        <div class="alert alert-success"><%= success %></div>
                    <% } %>
                    <% if (error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>

                    <form method="POST" action="/admin/department/create">
                        <div class="form-group">
                            <label>Gerente (Username)</label>
                            <input name="username" class="form-control" required placeholder="Ex: maria.dev">
                        </div>
                        <div class="form-group">
                            <label>Código do Departamento</label>
                            <input name="deptCode" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Nome do Departamento</label>
                            <input name="deptName" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Localização</label>
                            <input name="location" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Descrição</label>
                            <textarea name="description" class="form-control" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Salvar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>
</body>
</html>
